<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/my_image"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:text="About Me:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="monospace"
        android:text="Hi Users,This is Shubham Kumar Mishra,developer of this App.Currently,I am in 3rd year of my Btech Degree,pursuing it from Jaypee Institute of Information Technology,Sector 62,Noida(U.P.).As a developer this is my first android app.So after using this app,please share your experience on google play.Your ratings and feedbacks will help me to do further improvement in this app and also in future android developement.So please rate this app and share your feedback on Google play."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Thank You"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>